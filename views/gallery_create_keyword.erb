<section class="flex flex-column" style="height:100vh;">
    <header class="pa2 pa4-ns w-100 bg-moon-gray mb6 flex items-center justify start">
        <h1 class="f2 f1-ns fw1 mv0 flex-auto">Photogrid Galleries</h1>
    </header>
    <form method="POST" action="/gallery/create/keyword" class="w-100 flex-auto flex items-center justify-center">
        <input name="gallery_id" type="hidden" value="<%= gallery_id %>" />
        <input class="f4 fw2 pa2 w6" name="keyword" type="text" required />
        <button class="f4 fw2 pa2 bg-blue white ml2" type="submit">Add Keyword <%= keyword_count + 1 %> of 3</button>
    </form>
</section>